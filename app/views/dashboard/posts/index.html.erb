<% provide(:page_name, "Dashboard") %>
<% provide(:side_name, "Posts") %>

<h1>Post listing</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <th>Title</th>
      <th></th>
      <th>Author</th>
      <th></th>
      <th></th>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, dashboard_post_path(post) %></td>
          <td class="col-xs-1 text-right text-warning">
            <% unless post.published %>
              <em>draft</em>
            <% end %>
          </td>
          <td><%= post.author.username %></td>
          <td class="col-xs-1">
            <%= link_to edit_dashboard_post_path(post), class: "btn btn-default btn-sm" do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          <td class="col-xs-1">
            <%= link_to dashboard_post_path(post), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
